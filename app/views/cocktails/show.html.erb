<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <h1><%= @cocktail.name %></h1>
      <% if !@cocktail.doses.empty? %>

        <% @cocktail.doses.each do |recipe| %>
          <%= link_to 'Delete', cocktail_dose_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?' } %>
          <%= recipe.description %>
          <%= recipe.ingredient.name %>
        <% end %>

      <% end %>
      <h2>New Dose</h2>
      <%= render 'doses/form' %>
      <br>
      <%= link_to "Back", cocktails_path %>
    </div>
  </div>
</div>
