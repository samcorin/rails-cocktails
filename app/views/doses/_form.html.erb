<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.collection_select :ingredient_id, Ingredient.order(:name), :id, :name, include_blank: true %>
    <%= f.input :ingredient_id, collection: Ingredient.all.each { |item| item.id }  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to "Back", cocktails_path, class: "float-right back-btn" %>
  </div>
<% end %>
